}

void keyPressed() {
  if (keyCode == UP){
      if (ntile(xmove,ymove-32)!=0) {
       ymove = ymove-32;
       }
  }
  if (keyCode == DOWN){
      if (ntile(xmove,ymove+32)!=0) {
       ymove = ymove+32;
       }
  }
  if (keyCode == LEFT){
      if (ntile(xmove-32,ymove)!=0) {
       xmove = xmove-32;
       }
  }
  if (keyCode == RIGHT){
      if (ntile(xmove+32,ymove)!=0) {
       xmove = xmove+32;
       }
  }
  //println("Estás en la posición: X = "+xmove/32+" Y = "+ymove/32);
